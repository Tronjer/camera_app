$(document).ready(function() {

  if ( !navigator.userAgent.match('Chrome') && !navigator.userAgent.match('Firefox') ) {
    $('.modal').modal('show');
  }

  $('.trigger_button').hover(
    function() {
      $(this).prop('src', "<%= asset_path('button_red.png') %>");
    },
    function() {
      $(this).prop('src', "<%= asset_path('button.png') %>");
    }
  );
})
